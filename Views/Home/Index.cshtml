@model List<ExamCreator.Models.Exam>
@{
    ViewData["Title"] = "Sınav Listesi";
}

    <div class="container row p-5  d-flex justify-content-center">
        <a href="/Home/CreateExam" class="btn btn-success ml-auto mb-2 mr-2">Sınav Oluştur</a>
        <table class="table table-striped rounded">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Oluşturma Tarihi</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sayac = 0;
                    foreach (var exam in Model)
                    {
                        <tr>
                            <td>@(sayac = sayac + 1)</td>
                            <td>@exam.Title</td>
                            <td>@exam.CreatedDate</td>
                            <td>
                                <a href="/Home/SolveExam/@exam.ExamId" class="btn-sm btn-info fa fa-list"></a>
                                <a href="/Home/DeleteExam/@exam.ExamId" class="btn-sm btn-danger fa fa-trash"></a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
